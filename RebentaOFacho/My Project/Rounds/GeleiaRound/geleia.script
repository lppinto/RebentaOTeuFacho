local curr_fire_num = 1
local function increase_fire(self, handle, elapsed)
	local next_fire_num = curr_fire_num + 1
	local curr_fire = string.format("fire#fire%d", curr_fire_num)
	local next_fire = string.format("fire#fire%d", next_fire_num)

	particlefx.play(next_fire)
	particlefx.stop(curr_fire)

	curr_fire_num = curr_fire_num + 1
	if curr_fire_num >= 4 then
		timer.cancel(handle)
		timer.delay(10, false, call_angle_from_sky)
	end
end

