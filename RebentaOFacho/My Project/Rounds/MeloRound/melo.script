function is_non_input_level ()
	return curr_level == PREPARE_ROUND or
	curr_level == WAIT_PREPARE_ROUND or
	curr_level ==  FINAL_RESULT or
	curr_level ==  GAME_END or
	curr_level ==  PREPARE_EVENT or
	curr_level ==  WAIT_PREPARE_EVENT
end

